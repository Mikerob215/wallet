<div class="col-md-3">
  <h1>My information</h1>
  <ul class="list-group">
    <li class="list-group-item">
      Name:
      <%= current_user.fname.capitalize %>
      <%= current_user.lname.capitalize %>
    </li>
    <li class="list-group-item">
      Number:
      <%= current_user.phone_number %>
    </li>
    <li class="list-group-item">
      Email:
      <%= current_user.email %>
    </li>
    <li class="list-group-item">
      Number of cards:
      <%= current_user.cards.count %>
    </li>
    <li class="list-group-item">
      Balance: <%= @balance %>
    </li>
  </ul>

</div>
<div class="col-md-6">
  <h1>My cards</h1>
  <ul class="list-group">
    <% @cards.each do |cards| %>
    <li class="list-group-item">
      <%= cards.number %>
      <strong>Shared with:</strong>
      <% cards.users.each do |names| %>
      <%= names.fname unless names.fname == current_user.fname %>
      <% end %>
    </li>
    <% end %>
  </ul>
</div>
